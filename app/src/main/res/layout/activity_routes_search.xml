<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="th.co.gissoft.airportsgissoft.activity.RoutesSearchActivity">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/departure"
        android:textAppearance="?android:attr/textAppearanceMedium"
        style="@style/padding_seach_page"
        android:textStyle="bold"
        android:paddingBottom="@dimen/abc_text_size_large_material"/>

    <Spinner
        android:id="@+id/spinner_source_country"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/abc_text_size_large_material"
        android:layout_marginBottom="@dimen/abc_text_size_large_material"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/t1"/>

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrival"
        style="@style/padding_seach_page"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:paddingBottom="@dimen/abc_text_size_large_material"
        android:layout_below="@+id/spinner_source_country"/>

    <Spinner
        android:id="@+id/spinner_destination_country"
        style="@android:style/Widget.DeviceDefault.Light.Spinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/abc_text_size_large_material"
        android:layout_below="@+id/t2"/>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/activity_main_footer"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal" />


</RelativeLayout>
